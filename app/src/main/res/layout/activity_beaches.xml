<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beaches"
    android:background="@drawable/backgrnd1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Natural Beaches In Sri Lanka"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_margin="20dp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Unawatuna"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_toLeftOf="@+id/image1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Unawatuna is one of the best beaches in Sri Lanka which is famous for calm blue waters. The unique selling point of this beach is that one could spot a whale shark if lucky."/>
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image1"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text1"
                android:src="@drawable/unawatuna"
                android:onClick="una"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bentota"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_toLeftOf="@+id/image2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="If you are looking for a Sri Lankan beach holiday and wish to stay at resorts that specialize in medicine centers and relaxing spa, Bentota is the place for you. It is one of the most beautiful beaches in Sri Lanka and is a perfect getaway for tourists who are looking to spend a few days away from the hustle and bustle of the city."
                />
                <ImageView
                android:layout_width="150dp"
                android:id="@+id/image2"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text2"
                android:src="@drawable/bentota"
                android:onClick="ben"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mirissa"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_toLeftOf="@+id/image3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Number three on our list of best beaches in Sri Lanka is Mirissa. With views of aquatic wildlife in its natural habitat, Mirissa attracts people from all over the world come to Mirissa for both ecological purposes as well as for holidays."/>
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image3"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text3"
                android:src="@drawable/mirissa"
                android:onClick="mirissa"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dickwella"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_toLeftOf="@+id/image4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Dickwella is the home to some of the plush resorts where many newly wedded couples often comes to celebrate their honeymoon. This is amongst the best beach places in Sri Lanka and offers the most tranquil environment"
                />

            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image4"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text4"
                android:src="@drawable/dickwella"
                android:onClick="dick"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Weligama"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:layout_toLeftOf="@+id/image5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="One of the best beach places in Sri Lanka is the Weligama beach on the southwest coast of the country. It is touted to be Sri Lankas most beautiful beach. You can click selfies here with your squad and your loved ones. Make sure to put those pictures up on Instagram for everyone to see."/>
                <ImageView
                android:layout_width="150dp"
                android:id="@+id/image5"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text5"
                android:src="@drawable/weligama"
                    android:onClick="weli"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Galle"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:layout_toLeftOf="@+id/image6"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Galle is one of the most visited beaches in Sri Lanka. It tops the list of beaches in Colombo. With a wonderful history; Galle amazes you by the architectural beauty, the tropical weather, the aroma of spices such as the cinnamon and cloves and more. The picturesque environment of Galle often pulls many foreign artists, poets, and writers."
                />
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image6"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text6"
                android:src="@drawable/galle"
                android:onClick="galle"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hikkaduwa "
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text7"
                android:layout_toLeftOf="@+id/image7"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Hikkaduwa Beach is characterized by some of the plushest hotels and nightclubs. This feature often attracts many overseas tourists. It promises loads of untouched natural beauty and relaxation for both body and soul. If youre considering a budget trip, you can maybe give this beach a miss and go for the other shortlisted best beaches in Sri Lanka."
                />
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image7"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text7"
                android:src="@drawable/hikkaduwa"
                android:onClick="hik"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Koggala "
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text8"
                android:layout_toLeftOf="@+id/image8"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Koggala is a small homely town which was built around the Second World War right after the Japanese air strikes. You can witness the rarest species of turtles in this region. Thats not all. This beach is famous among locals and tourists for its Instagram-worthy spots and the adventure sports that you can pursue here. Youll have the time of your life here!"/>
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image8"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text8"
                android:src="@drawable/koggala"
                android:onClick="kog"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>